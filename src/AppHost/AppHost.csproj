    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsAspireHost>true</IsAspireHost>
    <UserSecretsId>MeetupPlanner.AppHost</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Aspire.Hosting.AppHost" Version="13.0.0" />
    <PackageReference Include="Aspire.Hosting.Azure.AppConfiguration" Version="13.0.0" />
    <PackageReference Include="Aspire.Hosting.Azure.ApplicationInsights" Version="13.0.0" />
    <PackageReference Include="Aspire.Hosting.Azure.KeyVault" Version="13.0.0" />
    <PackageReference Include="Aspire.Hosting.Javascript" Version="13.0.0" />
    <PackageReference Include="Aspire.Hosting.SqlServer" Version="13.0.0" />
    <PackageReference Include="Aspire.Hosting.Yarp" Version="13.0.0" />
  </ItemGroup>

  <ItemGroup Label="CommunityToolkit">
    <PackageReference Include="CommunityToolkit.Aspire.Hosting.McpInspector" Version="*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MeetupPlanner.Admin\MeetupPlanner.Admin.csproj" />
    <ProjectReference Include="..\MeetupPlanner.Api\MeetupPlanner.Api.csproj" />
    <ProjectReference Include="..\MeetupPlanner.Proxy\MeetupPlanner.Proxy.csproj" />
  </ItemGroup>

</Project>
